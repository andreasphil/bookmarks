    "preact-iso": "^2.0.3",
    "prettier": "^2.3.2",
    "prettier-plugin-tailwind": "^2.2.12",
    "tailwindcss": "^2.2.7"
  },
  "devDependencies": {
    "wmr": "^3.4.1"
  }
}
